@model List<todo_list.Models.daily>
@{
    ViewBag.Title = "showdaily";
    Layout = "~/Views/Shared/_layout.cshtml";
}
<h1 style="width: 1200px; margin-left: 350px; text-align: center; margin-top: 100px; background-color: gray; margin-top: 100px">My Daily Target</h1>

<table class="table table-dark table-hover" style="width:1200px;margin-left:350px;text-align:center;">

    <tr style="font-size:xx-large">
        <td>ID</td>
        <td>Name</td>
        <td>Date</td>
        <td></td>
        <td></td>
        <td></td>
    </tr>

    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Id</td>
            <td>@x.Name</td>
            <td>@x.Date</td>
            <td>@Html.ActionLink("Delete", "delete", null, new { Id = x.Id }, new { @class = "btn btn-danger" })</td>
            <td>@Html.ActionLink("Update", "update", new { Id = x.Id }, new { @class = "btn btn-primary" })</td>
            <td>@Html.ActionLink("Done", "donedaily", new { Id = x.Id }, new { @class = "btn btn-success" })</td>

        </tr>
    }

</table>
@section script
{
    <script src="~/Scripts/jquery-1.8.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}

